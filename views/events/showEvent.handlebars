

<div class="tabela">
<div class="container">
  <h3 style="margin-top:20px "class="title-info">Meus Eventos</h3>
  <div class="row">
    <div class="col-12">
      <table class="table table-hover ">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nome do Evento</th>
            <th scope="col">Local do Evento</th>
            <th scope="col">Itens</th>
            <th scope="col">Ações</th>
          </tr>
        </thead>
        <tbody>
            {{#each events}}
          <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.name}}</td>
            <td>{{this.city}}</td>
            <td>
              {{#each this.items}}
              <p>{{this}}</p>
              {{/each}}
            </td>

            <td>
              <form action="/events/remove" method="POST">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Excluir</button>
              </form>          
            </td>
          </tr>
          <tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>