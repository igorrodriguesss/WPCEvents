<div id="carouselSite" class="carousel slide" data-interval="1000" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/img/foto5.jpg" height="400" class="w-100">
    </div>
    <div class="carousel-item">
      <img src="/img/foto2.jpg" height="400" class="w-100">
    </div>
    <div class="carousel-item">
      <img src="/img/foto3.jpg" height="400" class="w-100">
    </div>
  </div>
</div>

<div class="container">
<hr>
<h3 style="">Próximos eventos</h3>
<p style="color:grey;">Aqui você encontra os melhores eventos!</p>
<div class="row">
        {{#each events}}
            <div class="col-sm-3">
                <div class="card  text-dark bg-light" style="width: 16rem; border-radius: 10px; margin-top:15px;">
                  <img style="border-top-left-radius:10px; border-top-right-radius:10px; max-width:256px; height:200px; " src="/img/imgEventos/{{this.image}}" class="card-fluid">
                  <div class="card-body text-dark">
                    <h5 class="card-title">{{ this.name }}</h5>
                    <p class="card-text">{{this.city}}</p>
                  </div>
                  <div class="card-body">
                    <a href="events/view/{{this.id}}" class="btn btn-secondary">Saber Mais</a>
                  </div>
                         </div>    
                </div>
                 {{/each}}
            </div>

